{
    "name": "aria-live-capture",
    "version": "0.5.1",
    "description": "Capture announcements of ARIA-live regions",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/AriPerkkio/aria-live-capture",
    "bugs": "https://github.com/AriPerkkio/aria-live-capture",
    "repository": {
        "type": "git",
        "url": "https://github.com/AriPerkkio/aria-live-capture"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc --project tsconfig.prod.json",
        "lint": "eslint . --max-warnings 0 --ext .js,.ts,.tsx",
        "test": "vitest run",
        "test:integration": "start-server-and-test docs 6006 'cypress run'",
        "cy": "cypress",
        "validate": "yarn build && yarn lint && yarn test && yarn test:integration",
        "docs": "start-storybook -p 6006 --quiet --loglevel error",
        "docs:build": "build-storybook --quiet --loglevel error --output-dir docs",
        "docs:deploy": "gh-pages -d docs"
    },
    "devDependencies": {
        "@storybook/addon-docs": "^6.4.12",
        "@storybook/html": "^6.4.12",
        "@testing-library/cypress": "^8.0.1",
        "@testing-library/dom": "^8.11.3",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "cypress": "^8.7.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-testing-library": "^4.6.0",
        "gh-pages": "^3.2.3",
        "jsdom": "^19.0.0",
        "prettier": "2.2.0",
        "start-server-and-test": "^1.14.0",
        "typescript": "^4.4.4",
        "virtual-dom-nodes": "^0.0.2",
        "vite": "^2.9.12",
        "vitest": "^0.15.1"
    },
    "keywords": [
        "aria",
        "aria-live",
        "accessibility",
        "a11y"
    ],
    "prettier": {
        "arrowParens": "avoid",
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 80
    }
}
