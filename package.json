{
    "name": "aria-live-capture",
    "version": "1.0.0",
    "description": "Capture announcements of ARIA-live regions",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/AriPerkkio/aria-live-capture",
    "bugs": "https://github.com/AriPerkkio/aria-live-capture",
    "repository": {
        "type": "git",
        "url": "https://github.com/AriPerkkio/aria-live-capture"
    },
    "scripts": {
        "changelog": "npx conventional-changelog-cli -i CHANGELOG.md -p angular -s -r 0",
        "prebuild": "rm -rf ./dist",
        "build": "tsc --project tsconfig.prod.json",
        "lint": "eslint . --max-warnings 0 --ext .js,.ts,.tsx",
        "test": "vitest run",
        "test:integration": "start-server-and-test docs 6006 'cypress run'",
        "cy": "cypress run",
        "validate": "yarn build && yarn lint && yarn test && yarn test:integration",
        "docs": "start-storybook -p 6006 --quiet --loglevel error",
        "docs:build": "build-storybook --quiet --loglevel error --output-dir docs",
        "docs:deploy": "gh-pages -d docs"
    },
    "devDependencies": {
        "@storybook/addon-docs": "^6.5.14",
        "@storybook/builder-vite": "^0.2.5",
        "@storybook/html": "^6.5.14",
        "@testing-library/cypress": "^8.0.7",
        "@testing-library/dom": "^8.19.0",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "cypress": "^12.1.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-testing-library": "^5.9.1",
        "gh-pages": "^4.0.0",
        "jsdom": "^20.0.3",
        "prettier": "^2.8.1",
        "start-server-and-test": "^1.15.2",
        "typescript": "^4.7.4",
        "virtual-dom-nodes": "^0.2.0",
        "vite": "^3.2.5",
        "vitest": "^0.25.7"
    },
    "keywords": [
        "aria",
        "aria-live",
        "accessibility",
        "a11y"
    ],
    "prettier": {
        "arrowParens": "avoid",
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 80
    }
}
