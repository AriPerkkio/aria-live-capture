{
    "name": "aria-live-capture",
    "version": "1.0.1",
    "description": "Capture announcements of ARIA-live regions",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "author": "Ari Perkkio <ari.perkkio@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/AriPerkkio/aria-live-capture",
    "bugs": "https://github.com/AriPerkkio/aria-live-capture",
    "repository": {
        "type": "git",
        "url": "https://github.com/AriPerkkio/aria-live-capture"
    },
    "packageManager": "pnpm@8.6.1",
    "scripts": {
        "changelog": "npx conventional-changelog-cli -i CHANGELOG.md -p angular -s -r 0",
        "prebuild": "rm -rf ./dist",
        "build": "tsc --project tsconfig.prod.json",
        "lint": "eslint . --max-warnings 0 --ext .js,.ts,.tsx",
        "test": "vitest run",
        "test:integration": "start-server-and-test docs 6006 'test-storybook'",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm build && pnpm lint && pnpm typecheck && pnpm test && pnpm test:integration",
        "docs": "storybook dev -p 6006",
        "docs:build": "storybook build --output-dir docs",
        "docs:deploy": "gh-pages -d docs"
    },
    "devDependencies": {
        "@storybook/addon-docs": "^7.0.18",
        "@storybook/addon-interactions": "^7.0.18",
        "@storybook/addons": "^7.0.18",
        "@storybook/blocks": "^7.0.18",
        "@storybook/core-events": "^7.0.18",
        "@storybook/html": "^7.0.18",
        "@storybook/html-vite": "^7.0.18",
        "@storybook/jest": "^0.1.0",
        "@storybook/manager-api": "^7.0.18",
        "@storybook/test-runner": "^0.10.0",
        "@storybook/testing-library": "^0.1.0",
        "@storybook/theming": "^7.0.18",
        "@testing-library/dom": "^9.3.0",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "@vitest/browser": "^0.32.0",
        "@vitest/utils": "^0.32.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-testing-library": "^5.11.0",
        "gh-pages": "^5.0.0",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "start-server-and-test": "^2.0.0",
        "storybook": "^7.0.18",
        "typescript": "^5.0.4",
        "virtual-dom-nodes": "^0.2.0",
        "vite": "^4.3.9",
        "vitest": "^0.32.0"
    },
    "pnpm": {
        "overrides": {
            "playwright": "1.33.0"
        }
    },
    "keywords": [
        "aria",
        "aria-live",
        "accessibility",
        "a11y"
    ],
    "prettier": {
        "arrowParens": "avoid",
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 80
    }
}
